# MongoDB connection
MONGODB_URI=mongodb://localhost:27017/grc-compliance
DATABASE_NAME=grc-compliance

# JWT
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=12h
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=7d

# Server
PORT=3001
NODE_ENV=development

# CORS: Set this to your frontend's URL (including port)
FRONTEND_URL=http://localhost:5173

# File uploads
MAX_FILE_SIZE=10485760
UPLOAD_DEST=./uploads

# Where generated reports are stored
REPORTS_DEST=./reports
